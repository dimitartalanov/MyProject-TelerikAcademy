<div class="row text-left">
  <div class="trail trail-portf" style="padding-left: 18.4em;">
    <a href="#/home">Home</a> >>
    <a href="#/profile">Profile</a>
  </div>
</div>
{{#items}}
<div class="row" style="padding-top:7em;padding-bottom:10em">
  <div class="col-xs-12 col-sm-6 col-md-6 col-md-offset-3">
    <div class="well well-sm" style="
    border: none;">
      <div class="row">
        <div class="col-sm-6 col-md-4">
          {{#if userPhoto}}
          <img style=" width: 100%;" src="{{userPhoto}}" alt="" class="img-rounded img-responsive" /> {{else}}
          <img style=" width: 100%;" src="https://www.lumineers.me/images/core/profile-image-zabadnesterling.gif" alt="" />          {{/if}}
        </div>
        <div class="col-sm-6 col-md-8">
          <h4>
            {{userName}}</h4>
          <p>
            <i class="glyphicon glyphicon-envelope"></i>{{email}}
            <br />
        </div>
        <div class="col-md-8 recent">
          <div class="container-fluid comments text-left" style="width: 90%;">
            <h4 class="text-left">My Comments</h4>
            <div class="container-fluid color-light field">
              <ul>
                {{#comments}}
                <li style="width: 100%;text-align: left !important;"><a href="#/posts/post/{{id}}" style="color: #5e5e5e;">
                    {{comment.comment}}</a></li>
                {{/comments}}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/items}}